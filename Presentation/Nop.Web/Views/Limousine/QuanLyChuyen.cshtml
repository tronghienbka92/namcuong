        function ChuyenVePaste(data_sodogheid) {
            var _chuyendiid = $('#@Html.FieldIdFor(m=>m.ChuyenDiId)').val();
            $.ajax({
                cache: false,
                type: "POST",
                data: {
                    "ChuyenDiId": _chuyendiid,
                    "SoDoGheId": data_sodogheid
