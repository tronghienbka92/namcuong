@model ChuyenDiThuChiModel
@Html.HiddenFor(model => model.ChuyenDiId)
@Html.HiddenFor(model => model.ChuyenDiId)
@using (Html.BeginForm("_CapNhatChiPhiChuyenDi", "Limousine", FormMethod.Post, new { id = "FromChiPhi" }))
{
    <div class="section-header">

        <div class="options">
            <input type="button" id="btnHoanTat" class="k-button" value="@T("Nop.Web.PhuTrachChuyen.HoanTat")" />
        </div>
    </div>
 
    <table width="100%">
        <tr>
            <td>
                <table>
                    @for (int i = 0; i < Model.ThuChis.Count(); i++)
                    {

                        <tr>
                            <td>
                                @Html.CheckBoxFor(model => model.ThuChis[i].LoaiThuChiCheck) 
                                @Html.DisplayFor(model => model.ThuChis[i].TenLoaiThuChi)  @Model.ThuChis[i].SoTien.ToString("###,###")
                               @Html.HiddenFor(model => model.ChuyenDiId)
                                @Html.HiddenFor(model => model.ThuChis[i].SoTien)
                                @Html.HiddenFor(model => model.ThuChis[i].ChuyenDiThuChiId)
                            </td>

                        </tr>
                    }
                </table>
            </td>

        </tr>

    </table>

    <script type="text/javascript">

    $(document).ready(function () {
        $('#btnHoanTat').click(function () {
           
            var form = $('#FromChiPhi');
            if (form.valid()) { //if you use validation
                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: $("#FromChiPhi").serialize(),
                    success: function (data) {
                        if(data=="OK")
                        {
                            SetCloseWindowChiPhi();
                           
                        }
                        else {
                            alert("");
                        }
                    }
                });
            }
        });

    });

    </script>
}




